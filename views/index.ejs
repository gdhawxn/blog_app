<%include ./partials/header%>
<div class="ui main text container">
<div class="ui huge header">Restful Blog App</div>
<div class="ui top attached segment">
    <div class="ui divided items">
      <%for(var i=0;i<b.length;i++){%>
    <div class="item">
        <div class='image'><img src=<%=b[i]['image']%>/></div>
        <div class="content">
            <a class="header" href="/blogs/<%=b[i]._id%>"><%=b[i]['title']%></a>
            <div class="meta"><%=b[i]['created'].toDateString()%></div>
             <div class="description">
        <p><%-b[i]['body'].substring(0,100);%>...</p>
        </div>
        <div class="extra">
        <a class="ui inverted blue button" href="/blogs/<%=b[i]._id%>">Read More<i class="right chevron icon small"></i></a>
        </div>
        </div>
    </div>
    <% } %>  
    </div>
</div>
</div>
<%include ./partials/footer%>